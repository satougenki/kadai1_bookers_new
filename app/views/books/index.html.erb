<div><%= flash[:notice] %></div>
<h1>Books</h1>


<table class="book-wrap">
 <tr class="table-tilte">
  <th class="title">Title</th>
  <th class="body">Body</th>
  <th class="link"></th>
 </tr>
<% @books.each do |book| %>
 <tr class="book-comment">
  <td class="book-title"><%= book.title %></td>
  <td class="book-body"><%= book.body %></td>
  <td class="book-link">
   <span><%= link_to "Show", book_path(book.id) %></span>
   <span><%= link_to "Edit", edit_book_path(book.id) %></span>
   <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
  </td>
 </tr>
<% end %>
</table>

<div class="errors_messages">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
 <h2>Title</h2>
 <%= f.text_field :title %>

 <h2>Body</h2>
 <%= f.text_field :body %>

 <%= f.submit 'Create Book' %>
<% end %>