<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
 <h3>Title</h3>
 <p><%= f.text_field :title %></p>
 <h3>Body</h3>
 <p><%= f.text_area :body %></p>

 <%= f.submit 'UPdate Book' %>

 <% end %>
 <span><%= link_to "show", book_path(@book.id) %></span>|
 <span><%= link_to "Back", books_path %></span>
